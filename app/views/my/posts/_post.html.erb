<%= turbo_frame_tag post do %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.content %></p>
      <p class="card-text"><small class="text-muted">Posted <%= time_ago_in_words(post.created_at) %> ago</small></p>
    </div>
  </div>
<% end %>

<h2><%= t(".title") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render "my/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :name, class: "form-label" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: "name" %>
  </div>

  <div>
    <%= f.label :surname, class: "form-label" %><br />
    <%= f.text_field :surname, autofocus: true, class: "form-control", autocomplete: "surname" %>
  </div>

  <div>
    <%= f.label :phone, class: "form-label" %><br />
    <%= f.text_field :phone, autofocus: true, class: "form-control", autocomplete: "phone" %>
  </div>

  <div>
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-label" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="mt-3">
    <%= f.submit t(".submit"), class: "btn btn-success" %>
    <%= render "my/shared/links" %>
  </div>
<% end %>

